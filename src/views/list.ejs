<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List of Customers</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
<h1>
<h1>List of Customers Forms</h1>
</h1>
<br>
<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>id</th>
        <th>More Info</th>
        <th>companyName</th>
        <th>mc</th>
        <th>address</th>
        <th>city</th>
        <th>state</th>
        <th>zip</th>
        <th>primaryPh</th>
        <th>ext</th>
        <th>secondaryPh</th>
        <th>generalContact</th>
        <th>cell</th>
    </tr>
    </thead>
    <tbody>
    <% result.forEach(customer => { %>
        <tr>
            <th scope="row"><%= customer.id %></th>
            <td><button type="button"  class="btn btn-outline-secondary" onclick="findCustomerId('<%= customer.id %>')" >Open</button></td>
            <td><%= customer.companyName %></td>
            <td><%= customer.mc %></td>
            <td><%= customer.address %></td>
            <td><%= customer.city %></td>
            <td><%= customer.state %></td>
            <td><%= customer.zip %></td>
            <td><%= customer.primaryPh %></td>
            <td><%= customer.ext %></td>
            <td><%= customer.secondaryPh %></td>
            <td><%= customer.generalContact %></td>
            <td><%= customer.cell %></td>
        </tr>
    <% }); %>
    </tbody>
</table>
</ul>
<script>
  function findCustomerId(customerId) {
    const id = customerId.toString()
    window.location.href = `/list-id/${id}`
  }
</script>
</body>
</html>





